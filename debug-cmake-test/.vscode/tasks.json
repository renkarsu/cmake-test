{
  "tasks": [
    {
      "type": "shell",
      "label": "C/C++: g++.exe build active file",
      "command": "powershell",
      "args": [
        "mkdir build; cd build; cmake .. -G \\\"MSYS Makefiles\\\" -DCMAKE_BUILD_TYPE=Debug; make"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}